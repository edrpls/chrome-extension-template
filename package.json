{
    "name": "chrome-extension-template",
    "version": "0.0.9",
    "description": "Chrome extension boilerplate, replace all values!",
    "main": "src/index.js",
    "repository": "git@github.com:edrpls/chrome-extension-template.git",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.6.2",
        "babel-loader": "^8.0.6",
        "copy-webpack-plugin": "^5.0.4",
        "nodemon": "^1.14.12",
        "rimraf": "^3.0.0",
        "webpack": "^4.41.0",
        "webpack-cli": "^3.3.9"
    },
    "scripts": {
        "start": "nodemon --exec yarn build --mode=development",
        "prebuild": "rimraf dist",
        "build": "webpack"
    },
    "nodemonConfig": {
        "ignore": [
            "dist/",
            "node_modules"
        ],
        "execMap": {
            "js": "node"
        },
        "ext": "js html css",
        "verbose": true
    }
}
